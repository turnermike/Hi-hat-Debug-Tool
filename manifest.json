{
  "manifest_version": 3,
  "name": "Hi-hat Debug Tool",
  "version": "1.1",
  "description": "Developer tools for debugging: URL parameters, form clearing, measurements, vulnerability scanning, and WordPress-specific debug features",
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "windows",
    "downloads",
    "storage",
    "contextMenus",
    "clipboardRead",
    "browsingData",
    "tabCapture"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Hi-hat Debug Tool",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png"
    }
  },
  "commands": {
    "copy-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Copy current URL to clipboard"
    },
    "paste-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Navigate to URL from clipboard"
    }
  }
}
